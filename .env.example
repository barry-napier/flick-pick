# Database
DATABASE_URL="file:./dev.db"

# TMDB API (Required)
# Get your API key from https://www.themoviedb.org/settings/api
NEXT_PUBLIC_TMDB_API_KEY=your_tmdb_api_key_here

# Device Fingerprinting (Required)
# Random string used for device ID generation salt
FINGERPRINT_SECRET=your_random_secret_string_here

# Optional: Vercel/Production
VERCEL_URL=https://your-app.vercel.app

# Optional: Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Optional: Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Prisma (for production)
# PRISMA_ACCELERATE_URL=your_accelerate_connection_string