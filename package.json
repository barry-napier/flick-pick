    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.1",
    "prisma": "^5.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
