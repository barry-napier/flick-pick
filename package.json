{
  "name": "flick-pick",
  "version": "1.0.0",
  "description": "Pick your next flick - A Tinder-style movie discovery platform",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "prisma generate && next build",
